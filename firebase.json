{
  "functions": {
    "source": "apps/firebase-functions",
    "runtime": "nodejs22",
    "ignore": [
      "**/.*",
      "**/node_modules/**"
    ],
    "predeploy": [
      "pnpm --filter ./apps/firebase-functions run build"
    ]
  },
  "hosting": [
    {
      "source": "apps/frontend",
      "frameworksBackend": {}
    }
  ],
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true
    }
  }
}
